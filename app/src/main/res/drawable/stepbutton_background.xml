<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffffe0"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#007AFF"
                android:startColor="#005CB2"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>